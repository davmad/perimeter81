{
    "restartable": "rs",
    "ignore": [
        ".git",
        "node_modules/**/node_modules",
        "dist/"
    ],
    "verbose": true,
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "ts,js,html,json,yml",
    "exec": "npm run build && node --inspect=0.0.0.0:9459 --harmony ./dist/server.js",
    "delay": "400"
}
